/* pages/index/index.wxss */
.container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-section {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  padding: 20rpx 30rpx 40rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 轮播图 */
.banner-section {
  margin: -20rpx 30rpx 30rpx;
  position: relative;
  z-index: 1;
}

.banner-swiper {
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类导航 */
.category-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: linear-gradient(180deg, #1890ff 0%, #36cfc9 100%);
  border-radius: 3rpx;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.category-icon-wrap {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.15);
}

.category-icon {
  width: 50rpx;
  height: 50rpx;
}

.category-name {
  font-size: 26rpx;
  color: #666;
}

/* 热门课程 */
.course-section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.more-link {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.more-link::after {
  content: '>';
  margin-left: 8rpx;
  font-size: 24rpx;
}

.course-scroll {
  white-space: nowrap;
}

.course-list {
  display: flex;
}

.course-item {
  width: 280rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.course-cover {
  width: 100%;
  height: 160rpx;
  background-color: #f0f0f0;
}

.course-info {
  padding: 20rpx;
}

.course-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
  height: 80rpx;
  line-height: 40rpx;
  white-space: normal;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.course-sales {
  font-size: 24rpx;
  color: #999;
}

/* 最新课程 */
.course-list-vertical {
  display: flex;
  flex-direction: column;
}

.course-item-vertical {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-item-vertical:last-child {
  border-bottom: none;
}

.course-cover-vertical {
  width: 240rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.course-info-vertical {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title-vertical {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 44rpx;
}

.course-desc-vertical {
  font-size: 26rpx;
  color: #999;
  margin-top: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-bottom-vertical {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.course-teacher {
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
  margin-left: 16rpx;
}

/* pages/course/player/index.wxss */
.player-container {
  width: 100%;
  height: 100vh;
  background-color: #000;
  display: flex;
  flex-direction: column;
}

/* 视频播放器 */
.video-wrapper {
  flex: 1;
  position: relative;
  width: 100%;
  background-color: #000;
}

.course-video {
  width: 100%;
  height: 100%;
}

/* 弹幕层 */
.danmaku-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.danmaku-item {
  position: absolute;
  font-size: 24rpx;
  white-space: nowrap;
  animation: danmaku-move 10s linear;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.8);
}

@keyframes danmaku-move {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(-100%);
  }
}

/* 控制栏 */
.control-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
  color: #fff;
  font-size: 24rpx;
}

/* 章节侧边栏 */
.chapters-sidebar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.chapters-sidebar.show {
  display: block;
}

.sidebar-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.sidebar-content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 600rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  animation: sidebar-slide-in 0.3s ease-out;
}

@keyframes sidebar-slide-in {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0);
  }
}

.sidebar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.sidebar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.sidebar-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.sidebar-scroll {
  flex: 1;
  overflow-y: auto;
}

.chapter-group {
  padding: 20rpx 30rpx;
}

.chapter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.lessons-list {
  padding-left: 20rpx;
}

.lesson-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 15rpx;
}

.lesson-item.active {
  color: #1890ff;
}

.lesson-name {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.lesson-item.active .lesson-name {
  color: #1890ff;
  font-weight: bold;
}

.lesson-duration {
  font-size: 24rpx;
  color: #999;
}

.lesson-free {
  font-size: 22rpx;
  color: #52c41a;
  padding: 2rpx 8rpx;
  border: 1rpx solid #52c41a;
  border-radius: 4rpx;
}

/* 弹幕输入框 */
.danmaku-input-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 100;
}

.danmaku-input {
  width: 100%;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}


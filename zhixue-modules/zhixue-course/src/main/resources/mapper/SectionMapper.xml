<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixue.course.mapper.SectionMapper">
    <resultMap id="SectionResult" type="com.zhixue.course.domain.entity.Section">
        <id column="id" property="id"/>
        <result column="course_id" property="courseId"/>
        <result column="chapter_id" property="chapterId"/>
        <result column="title" property="title"/>
        <result column="video_url" property="videoUrl"/>
        <result column="duration" property="duration"/>
        <result column="order_num" property="orderNum"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, course_id, chapter_id, title, video_url, duration, order_num, status, create_time, update_time, deleted
    </sql>

    <select id="selectAll" resultMap="SectionResult">
        select <include refid="Base_Column_List"/> from section where deleted = 0
    </select>
</mapper>


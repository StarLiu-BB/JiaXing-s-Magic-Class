<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixue.course.mapper.ChapterMapper">
    <resultMap id="ChapterResult" type="com.zhixue.course.domain.entity.Chapter">
        <id column="id" property="id"/>
        <result column="course_id" property="courseId"/>
        <result column="title" property="title"/>
        <result column="order_num" property="orderNum"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, course_id, title, order_num, create_time, update_time, deleted
    </sql>

    <select id="selectAll" resultMap="ChapterResult">
        select <include refid="Base_Column_List"/> from chapter where deleted = 0
    </select>
</mapper>


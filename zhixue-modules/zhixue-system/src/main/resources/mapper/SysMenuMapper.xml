<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixue.system.mapper.SysMenuMapper">
    <resultMap id="SysMenuResult" type="com.zhixue.system.domain.entity.SysMenu">
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="menu_name" property="menuName"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="perms" property="perms"/>
        <result column="icon" property="icon"/>
        <result column="menu_type" property="menuType"/>
        <result column="order_num" property="orderNum"/>
        <result column="visible" property="visible"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, parent_id, menu_name, path, component, perms, icon, menu_type, order_num, visible, status, create_time, update_time, deleted
    </sql>

    <select id="selectAll" resultMap="SysMenuResult">
        select <include refid="Base_Column_List"/> from sys_menu where deleted = 0 order by order_num
    </select>
</mapper>

